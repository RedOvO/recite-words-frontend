// 用户在背单词页面把单词添加到自定义单词列表
ajax: "/api/recite/collect/"
ajax.request{
    user: 'user001'
    present_no: '103'
    catalog: '1' //0表示cet4，1表示cet6
}
ajax.response:{
    "code": "200",
    "message": "success",
}


