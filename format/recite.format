// 获取用户4级背诵进度
ajax:"/api/recite/cet4"
ajax.request: {
    user: 'user001'
}
ajax.response:{
    "code": "200",
    "message": "success",
    counter: 100, //背诵计划设置的量
	data:{
        present_no: 103,    // 今天应该背诵的第一个单词的序号
        today_words: {
            word: 'Hello1',
            desc: 'Hello1 is a word',
        }  // 今天第一个要背诵的单词
    }
}

// 获取用户4级下一个单词
ajax:"/api/recite/cet4_next"
ajax.request{
    user: 'user001'
    present_no: '103'
}
ajax.response:{
    "code": "200",
    "message": "success",
	data:{
        present_no: 104,    // 之后一个应该背诵的单词序号
        today_words: {
            word: 'Hi',
            desc: 'Hi is a word',
        }  // 之后一个要背诵的单词
    }
}

